        'notification': False,
        'roles': ['admin', 'Member'],
        'group': { 
          'name': 'keystone',
          'gid': '301',
        }, 
        'user': { 
          'username': 'keystone',
          'uid': '301',
          'home': '/var/lib/keystone',
          'shell': '/bin/false',
          'fullname': 'OpenStack Keystone Daemons',
